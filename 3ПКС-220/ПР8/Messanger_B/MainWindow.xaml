<Window x:Class="Messanger_B.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messanger_B"
        mc:Ignorable="d"
        Title="Messenger_B" Height="450" Width="800" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBox x:Name="TextBoxAnswer" Margin="10" FontSize="24" Background="Red" IsReadOnly="True"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <TextBox x:Name="TextBoxUser" Margin="10" VerticalContentAlignment="Center" FontSize="24"/>
            </Grid>
            <Grid Grid.Column="1">
                <Button x:Name="ButtonSendMessage" Margin="10" Content="Send" FontSize="24" Click="ButtonSendMessage_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>

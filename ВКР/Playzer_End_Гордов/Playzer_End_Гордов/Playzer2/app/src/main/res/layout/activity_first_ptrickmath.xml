<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090d45"
    android:orientation="vertical"
    tools:context=".trickmath.FirstPtrickmath">


    <TextView
        android:id="@+id/discription"
        android:layout_width="313dp"
        android:layout_height="83dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="44dp"
        android:text="В этой игре вам нужно выбрать большее число/сумму чисел и нажать на кнопку ниже чисел. Если числа равны нажмите на кнопку равно"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/playtrm"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginTop="184dp"
        android:text="Играть"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>